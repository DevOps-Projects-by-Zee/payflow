# ============================================
# Production Environment Example Variables
# ============================================
# Copy this file to terraform.tfvars and update values

project_name = "payflow"
aws_region   = "us-east-1"

# Backend configuration (from Hub)
terraform_state_bucket = "payflow-terraform-state-xxxxx"  # Get from Hub outputs

# Node configuration
node_key_pair_name = "payflow-bastion"  # Same as Hub

# Database configuration
db_instance_class = "db.t3.small"  # Multi-AZ for HA

# Redis configuration
redis_node_type = "cache.t3.micro"  # Multi-AZ for HA

