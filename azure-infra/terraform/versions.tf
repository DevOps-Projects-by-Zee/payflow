# Terraform version constraints and provider configurations
# Defines required Terraform and provider versions for infrastructure deployment
# Inputs: Terraform version, Azure provider version, module compatibility

terraform {
  required_version = ">= 1.0"
  required_providers {
    azurerm = {
      source  = "hashicorp/azurerm"
      version = "~> 3.0"
    }
  }
}

provider "azurerm" {
  features {
    key_vault {
      purge_soft_delete_on_destroy = true
    }
  }
}
